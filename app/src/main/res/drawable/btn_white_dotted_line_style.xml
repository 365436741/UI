<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 被按下去 -->
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="90.0" android:centerColor="#ff868686" android:endColor="#ff868686" android:startColor="#ff868686" />

            <padding android:bottom="5dip" android:left="5dip" android:right="5dip" android:top="5dip" />

            <stroke android:dashGap="3dp" android:dashWidth="5dp" android:width="1dp" android:color="#000000" />

            <corners android:radius="5dip" />
        </shape></item>
    <!-- 其他情況,有需要的情况可以定制 -->
    <item><shape android:shape="rectangle">
            <gradient android:angle="90.0" android:centerColor="#ffffffff" android:endColor="#ffffffff" android:startColor="#ffffffff" />

            <stroke android:dashGap="3dp" android:dashWidth="5dp" android:width="1dp" android:color="#000000" />

            <padding android:bottom="5dip" android:left="5dip" android:right="5dip" android:top="5dip" />

            <corners android:radius="5dip" />
        </shape></item>

</selector>