<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">

        <com.lany.ui.textview.MyTextView
            android:id="@+id/scroll_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="动态信息动态信息动态信息动态信息动态信息动态信息动态信息动态信息动态信息动态信息动态信息111111111111111"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <com.lany.ui.textview.RainbowTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="HelloLanyHelloLanyHelloLanyHelloLanyHelloLanyHelloLanyHelloLanyHelloLanyHelloLanyHelloLanyHelloLanyHelloLanyHelloLanyHelloLanyHelloLany" />

    </LinearLayout>
</ScrollView>
